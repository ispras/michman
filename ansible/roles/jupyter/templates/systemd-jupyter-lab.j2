[Unit]
Description=jupyterlab service
After=network.target

[Service]
Type=simple
PIDFile=/run/jupyterlab.pid
User={{ jupyter_user }}
Group={{ jupyter_user }}
ExecStart={{ jupyter_venv }}/bin/jupyter lab \
        --config={{ jupyter_service_conf_path  }}
Restart=always
RestartSec=10

[Install]
WantedBy=multi-user.target
